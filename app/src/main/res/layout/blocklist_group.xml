<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:paddingLeft="40dp">

    <!-- TODO: Modify! -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/blocklist_group_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="none"
            android:singleLine="false"
            android:text="TestTestTestTest TestTestTest"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ph.intrepidstream.callmanager.ui.custom.MultiStateToggleButton
            android:id="@+id/blocklist_group_state_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            custom:states="@array/toggle_button_values"
            custom:borderSize="1dp"
            custom:innerPadX="5dp"
            custom:innerPadY="5dp"
            custom:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>