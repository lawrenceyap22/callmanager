<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blocklist_child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="70dp"
    android:paddingStart="70dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blocklist_child_starts_with_lookup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/blocklist_child_starts_with_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_delete" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/blocklist_child_starts_with_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/blocklist_child_starts_with_delete"
            android:layout_toStartOf="@id/blocklist_child_starts_with_delete"
            android:src="@android:drawable/ic_menu_edit" />

    </RelativeLayout>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/blocklist_child_starts_with_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blocklist_child_equals_lookup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/blocklist_child_equals_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_delete" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/blocklist_child_equals_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/blocklist_child_equals_delete"
            android:layout_toStartOf="@id/blocklist_child_equals_delete"
            android:src="@android:drawable/ic_menu_edit" />

    </RelativeLayout>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/blocklist_child_equals_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>